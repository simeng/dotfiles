[core]
  pager = "less -F -X"

[user]
  name = Simen Graaten
  email = simeng@gmail.com

[push]
  default = current
  autoSetupRemote = true

[pull]
  rebase = true

[fetch]
	recurseSubmodules = true
  prune = true

[diff]
  colorMoved = zebra

[init]
	defaultBranch = main

[alias]
  main = checkout main 
  prod = checkout production 
